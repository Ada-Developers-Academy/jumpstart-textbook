%button.toc-menu{ type: "button" } Toggle Table of Contents
%h2.toc-title Table of Contents
.toc-content
  - data.toc.each do |unit|
    %h3.toc-unit= unit.title
    - unit.chapters.each do |chapter|
      %h4.toc-chapter= chapter.title
      %ol.toc-lectures
        - chapter.lectures.each do |lecture|
          %li.toc-lecture= breadcrumb_link unit.title, chapter.title, lecture, { class: 'toc-link' }
