!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", 'http-equiv' => "X-UA-Compatible" }

    %title= yield_content(:title)

    %script{ src: "https://use.typekit.net/iel2sql.js" }
    :javascript
      try{Typekit.load({ async: false });}catch(e){}

    = stylesheet_link_tag "all"
    = javascript_include_tag  "https://code.jquery.com/jquery-2.1.4.min.js", "all"

  %body
    %main
      = partial :header
      .toc.sliding-panel-content= partial 'toc' 
      .content
        = partial 'breadcrumbs'
        = yield
      = partial :footer
    .toc-fade
